  <title>Registros de Llantas Usadas</title>
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <nav class="navbar">
      <a href="/usedtires/form" class="btn">Registrar Llanta Usada</a>
      <a href="/newtires/list" class="btn btn-secondary">Ver Llantas Nuevas</a>
      <a href="/login/dashboard" class="btn btn-menu">Ir al MenÃº Principal</a>
  </nav>

  <form action="/usedtires/export" method="GET" class="export-range">
      <label>Desde:
        <input type="date" name="from" required>
      </label>
      <label>Hasta:
        <input type="date" name="to" required>
      </label>
      <button type="submit" class="btn-excel">
        ðŸ“¥ Exportar Inventario
      </button>
      <p class="hint">Solo se permiten rangos de <strong>mÃ¡ximo 30 dÃ­as</strong>.</p>
    </form>

  <div class="container">
    <h1>Registros de Llantas USADAS</h1>

    <!-- ðŸ•µï¸ Formulario de bÃºsqueda -->
    <form method="GET" action="/usedtires/list" class="search-bar">
      <input
        type="text"
        name="search"
        placeholder="Buscar por marca, referencia o tipo..."
        value="<%= typeof search !== 'undefined' ? search : '' %>"
      />
      <button type="submit">Buscar</button>
    </form>

    <% if (Object.keys(tiresGrouped).length === 0) { %>
  <p>No hay llantas registradas.</p>
<% } else { %>
  <% for (let fecha in tiresGrouped) { %>
    <h3 style="margin-top: 30px; color: #333; border-bottom: 2px solid #ccc; padding-bottom: 5px;">
      ðŸ“… <%= fecha %>
    </h3>
    <table>
      <thead>
        <tr>
          <th>Marca</th>
          <th>Referencia</th>
          <th>Tipo de VehÃ­culo</th>
          <th>Peso</th>
          <th>Cantidad</th>
          <th>Precio Unitario</th>
          <th>Precio Mayorista</th>
          <th>Precio Detal</th>
          <th>UbicaciÃ³n</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% tiresGrouped[fecha].forEach(tire => { %>
          <tr>
            <td><%= tire.brand %></td>
            <td><%= tire.size %></td>
            <td><%= tire.type %></td>
            <td><%= tire.weight %></td>
            <td><%= tire.quantity %></td>
            <td><%= tire.priceUnit.toFixed(2) %> USD</td>
            <td><%= tire.priceWholesale.toFixed(2) %> USD</td>
            <td><%= tire.priceRetail.toFixed(2) %> USD</td>
            <td><%= tire.location %></td>
            <td class="action-buttons">
              <a href="/usedtires/edit/<%= tire.id %>" class="btn-edit">Editar</a>
              <form action="/usedtires/<%= tire.id %>?_method=DELETE" method="POST" onsubmit="return confirm('Â¿EstÃ¡s seguro de eliminar esta llanta?');">
                <button type="submit" class="btn-delete">Eliminar</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
<% } %>
  </div>
</body>
</html>