<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <link rel="icon" href="/img/favicon-96x96.png" type="image/png">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://kit.fontawesome.com/939dfff437.js" crossorigin="anonymous"></script>
  <title>Editar Llantas Usadas</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/navbar') %> 

  <div class="container">
    <h1 class="titulo">EDITAR LLANTAS USADAS</h1>

    <form action="/usedtires/edit/<%= tire.id %>" method="POST">

      <div class="form-group">
        <label for="brand">Marca</label>
        <select id="brand" name="brand" required>
          <% brands.forEach(b => { %>
            <option value="<%= b.id %>" <%= b.id === tire.brand ? 'selected' : '' %>><%= b.name %></option>
          <% }) %>
        </select>
      </div>

      <div class="form-group">
        <label for="size">Referencia</label>
        <input type="text" id="size" name="size" value="<%= tire.size %>" required>
      </div>

      <div class="form-group">
        <label for="type">Tipo de Vehículo</label>
        <select id="type" name="type" required>
          <% types.forEach(t => { %>
            <option value="<%= t.id %>" <%= t.id === tire.type ? 'selected' : '' %>><%= t.name %></option>
          <% }) %>
        </select>
      </div>

      <div class="form-group">
        <label for="weight">Peso (kg)</label>
        <input type="number" step="0.01" id="weight" name="weight" value="<%= tire.weight %>" required>
      </div>

      <div class="form-group">
        <label for="quantity">Cantidad</label>
        <input type="number" id="quantity" name="quantity" value="<%= tire.quantity %>" required>
      </div>

      <div class="form-group">
        <label for="location">Ubicación</label>
        <select id="location" name="location" required>
          <% locations.forEach(l => { %>
            <option value="<%= l.id %>" <%= l.id === tire.location ? 'selected' : '' %>><%= l.name %></option>
          <% }) %>
        </select>
      </div>

      <div class="form-group">
        <label for="priceUnit">Precio Unitario</label>
        <input type="number" step="0.01" id="priceUnit" name="priceUnit" value="<%= tire.priceUnit %>">
      </div>

      <div class="form-group">
        <label for="priceRetail">Precio al Detal</label>
        <input type="number" step="0.01" id="priceRetail" name="priceRetail" value="<%= tire.priceRetail %>">
      </div>

      <div class="form-group">
        <label for="priceWholesale">Precio al Por Mayor</label>
        <input type="number" step="0.01" id="priceWholesale" name="priceWholesale" value="<%= tire.priceWholesale %>">
      </div>

      <input type="hidden" name="condition" value="Usada" />

      <div class="form-actions">
        <button type="submit">Actualizar Llanta</button>
      </div>
    </form>
  </div>
</body>
</html>