<% if (typeof alertSound !== 'undefined' && alertSound && alerts && alerts.length > 0) { %>
  <!--  Notificaci贸n flotante (est谩tica en HTML para no depender solo de JS) -->
  <div class="stock-toast">
     隆Tienes <strong><%= alerts.length %></strong> alerta<%= alerts.length > 1 ? 's' : '' %> de stock bajo!
    <a href="/alerts" class="ver-alertas">Ver alertas</a>
  </div>

  <!-- Contenedor oculto para pasar el n煤mero de alertas al JS -->
  <div id="alerta-data" data-alert-count="<%= alerts.length %>"></div>

  <!--  Sonido y notificaci贸n controlada -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const alertaDiv = document.getElementById('alerta-data');
      const alertCount = parseInt(alertaDiv.dataset.alertCount) || 0;

      const lastCount = parseInt(localStorage.getItem('lastAlertCount')) || 0;

      if (alertCount > lastCount) {
        // Reproducir sonido si hay nuevas alertas
        const audio = new Audio('/sounds/alert.mp3');
        audio.play().catch(() => {});
      }

      // Guardar la cantidad actual para comparar en la pr贸xima carga
      localStorage.setItem('lastAlertCount', alertCount);

      // Mostrar notificaci贸n flotante tambi茅n desde JS por si hace falta
      const toast = document.createElement('div');
      toast.className = 'stock-toast';
      toast.innerHTML = ` 隆Tienes <strong>${alertCount}</strong> alerta${alertCount > 1 ? 's' : ''} de stock bajo!
        <a href="/alerts" class="ver-alertas">Ver alertas</a>`;
      document.body.appendChild(toast);

      // Ocultar despu茅s de 5 segundos
      setTimeout(() => toast.remove(), 5000);
    });
  </script>
<% } %>