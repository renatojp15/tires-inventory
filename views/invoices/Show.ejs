<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Factura <%= invoice.invoiceCode %></title>
  <link rel="stylesheet" href="/css/style.css">
  <script>
    function exportToPDF() {
      window.print();
    }
  </script>
</head>

<body>
  <div class="invoice-container">
    <header class="invoice-header">
        <div class="logo-container" style="flex: 1;">
          <img src="/img/Logo_sonix_itd.png" alt="Logo de Sonix Itd" style="width: 150px; height: auto;">
        </div>

        <h1>FACTURA</h1>
        <div class="invoice-info">
          <p><strong>Código:</strong> <%= invoice.invoiceCode %></p>
          <p><strong>Fecha:</strong> <%= new Date(invoice.date).toLocaleDateString() %></p>
        </div>
    </header>

        <hr>

        <h3>Datos del Cliente</h3>
          <p><strong>Nombre:</strong> <%= invoice.customer.fullName %></p>
          <p><strong>Cédula / ID:</strong> <%= invoice.customer.idNumber %></p>
          <% if (invoice.customer.phone) { %>
            <p><strong>Teléfono:</strong> <%= invoice.customer.phone %></p>
          <% } %>
          <% if (invoice.customer.address) { %>
            <p><strong>Dirección:</strong> <%= invoice.customer.address %></p>
          <% } %>

    <main>
      <table class="invoice-table">
        <thead>
          <tr>
            <th>Tipo</th>
            <th>Marca</th>
            <th>Tamaño</th>
            <th>Cantidad</th>
            <th>Precio Detal</th>
            <th>Subtotal</th>
          </tr>
        </thead>
        <tbody>
          <% invoice.items.forEach(item => {
            const tire = item.tireType === 'new' ? item.newTire : item.usedTire;
            const price = tire.priceRetail;
          %>
            <tr>
              <td><%= item.tireType === 'new' ? 'Nueva' : 'Usada' %></td>
              <td><%= tire.brand %></td>
              <td><%= tire.size %></td>
              <td><%= item.quantity %></td>
              <td>$<%= price.toFixed(2) %></td>
              <td>$<%= (item.quantity * price).toFixed(2) %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>

      <div class="invoice-total">
        <strong>Total a pagar:</strong> $<%= invoice.totalAmount.toFixed(2) %>
      </div>
    </main>

    <footer class="invoice-footer">
      <p>__________________________</p>
      <p>Firma</p>

      <div class="buttons">
        <a href="/invoices/new" class="btn">Nueva Factura</a>
        <button onclick="exportToPDF()" class="btn btn-secondary">Exportar a PDF para Imprimir</button>
      </div>
    </footer>
  </div>
</body>
</html>