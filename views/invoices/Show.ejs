<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <link rel="icon" href="/img/favicon-96x96.png" type="image/png">
  <title>Factura <%= invoice.invoiceCode %></title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/print.css" media="print">
  <link rel="stylesheet" href="/css/invoices.css">
  <script src="https://kit.fontawesome.com/939dfff437.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    function exportToPDF() { window.print(); }
  </script>
</head>

<body>
  <!-- ‚ë¢  ALERTA DE √âXITO --------------------------------------------- -->
  <script>
    /* Lee ?success=... de la URL */
    const params  = new URLSearchParams(window.location.search);
    const message = params.get('success');
    if (message){
      Swal.fire({
        icon:   'success',
        title:  '¬°Operaci√≥n exitosa!',
        text:   message,
        confirmButtonColor: '#3085d6'
      })
      /*  Limpia la URL para que la alerta no se repita
          al refrescar  */
      history.replaceState(null, '', window.location.pathname);
    }
  </script>
  <%- include('../partials/NavBar') %>
  <div class="invoice-container">
    <header class="invoice-header">
  <div class="logo-container" style="flex: 1;">
    <img src="<%= isPdf ? `http://${host}/img/LOGO-SONIX-LTD.png` : '/img/LOGO-SONIX-LTD.png' %>" alt="Logo de SONIX LTD" style="width: 150px; height: auto;">
  </div>

  <div>
    <h1>FACTURA</h1>
    <p><strong>Empresa:</strong> SONIX LTD</p>
    <p><strong>Direcci√≥n:</strong> LOTE NO 1 DE LA MANZANA (26-A), AVENIDA SAN ELADIO Y CALLE 17 DE LA ZONA LIBRE DE COL√ìN, PANAM√Å</p>
    <p><strong>Tel√©fono:</strong> 58 424-2428424</p>
    <p><strong>C√≥digo:</strong> <%= invoice.invoiceCode %></p>
    <p><strong>Fecha:</strong> <%= new Date(invoice.date).toLocaleDateString() %></p>
    <p><strong>Vendedor/a:</strong> <%= user.fullName %></p>
  </div>
</header>

    <hr>

    <h3>Datos del Cliente</h3>
    <p><strong>Nombre:</strong> <%= invoice.customer.fullName.replace(/\b\w/g,c=>c.toUpperCase()) %></p>
    <% if (invoice.customer.idNumber) { %>
      <p><strong>C√©dula / ID:</strong> <%= invoice.customer.idNumber %></p>
    <% } %>
    <% if (invoice.customer.phone) { %>
      <p><strong>Tel√©fono:</strong> <%= invoice.customer.phone %></p>
    <% } %>
    <% if (invoice.customer.address) { %>
      <p><strong>Direcci√≥n:</strong> <%= invoice.customer.address %></p>
    <% } %>

    <main>
      <table class="invoice-table">
        <thead>
          <tr>
            <th>Condici√≥n</th>
            <th>Marca</th>
            <th>Referencia</th>
            <th>Cantidad</th>
            <th>Peso (kg)</th>
            <th>Precio Detal</th>
            <th>Subtotal</th>
          </tr>
        </thead>
        <tbody>
  <% 
    let totalWeight = 0;
    invoice.items.forEach(item => {
      const tire = item.newTire ?? item.usedTire; // Obtenemos la llanta real
      const price = item.unitPrice;
      const peso = tire.weight;
      const pesoTotal = peso * item.quantity;
      totalWeight += pesoTotal;
  %>
    <tr>
      <td><%= item.newTire ? 'Nueva' : 'Usada' %></td>
      <td><%= tire.brand %></td>
      <td><%= tire.size %></td>
      <td><%= item.quantity %></td>
      <td><%= peso.toFixed(2) %></td>
      <td>$<%= price.toFixed(2) %></td>
      <td>$<%= (item.quantity * price).toFixed(2) %></td>
    </tr>
  <% }) %>
</tbody>
      </table>

      <div class="invoice-total">
        <p><strong>Peso total:</strong> <%= totalWeight.toFixed(2) %> kg</p>
        <p><strong>Total a pagar:</strong> $<%= invoice.totalAmount.toFixed(2) %></p>
      </div>
    </main>

    <footer class="invoice-footer">
      <p>__________________________</p>
      <p>Firma</p>

      <% if (!isPdf) { %>
      <div class="buttons btn-group no-print" style="display: flex; flex-wrap: wrap; gap: 10px; justify-content: center; margin-top: 15px;">
        <a href="/invoices/new" class="btn btn-create">üßæ Nueva Factura</a>
        <button onclick="exportToPDF()" class="btn btn-secondary">üñ®Ô∏è Imprimir</button>
        <a href="/invoices/<%= invoice.id %>/export-excel" class="btn btn-excel">üì• Exportar a Excel</a>
        <form action="/invoices/<%= invoice.id %>/delete" method="POST" class="delete-invoice-form" style="display: inline;">
          <button type="submit" class="btn btn-delete">üóëÔ∏è Eliminar Factura</button>
        </form>
      </div>
      <% } %>
    </footer>
  </div>
  <script>
  document.addEventListener('DOMContentLoaded', () => {
    // buscamos todos los formularios de eliminaci√≥n (por si en el futuro hay varios)
    const deleteForms = document.querySelectorAll('.delete-invoice-form');

    deleteForms.forEach(form => {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();                       // detenemos env√≠o

        const respuesta = await Swal.fire({
          title: '¬øEliminar factura?',
          text: 'Esta acci√≥n NO se puede deshacer',
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#d33',
          cancelButtonColor: '#3085d6',
          confirmButtonText: 'S√≠, eliminar',
          cancelButtonText: 'Cancelar'
        });

        if (respuesta.isConfirmed) {
          form.submit();                          // ahora s√≠ mandamos el POST
        }
      });
    });
  });
</script>
</body>
</html>